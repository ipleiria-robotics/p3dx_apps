<launch>
  <group ns="robot_0">
    <!-- Open the laser. See http://wiki.ros.org/urg_node for more details. -->
    <node pkg="urg_node" type="urg_node" name="hokuyo_laser"/>
    <!-- frame_id -->
    
  </group>
  
  <!-- Run wiimote -->
  <node pkg="wiimote" type="wiimote_node.py" name="wiimote" required="false" respawn="true"/>

  <!-- Run our application -->
  <node pkg="p3dx_apps" type="p3dx_demo" name="p3dx_demo" required="true" cwd="node"/>
  
</launch>
